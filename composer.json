{
    "name": "curly-deni/laravel-permission-observer",
    "description": "A Laravel package that observes model events and automatically enforces create, update, and delete permissions based on policies.",
    "keywords": [
        "laravel",
        "permissions",
        "authorization",
        "observer",
        "policy",
        "model observer",
        "security",
        "eloquent"
    ],
    "homepage": "https://github.com/curly-deni/laravel-permission-observer",
    "license": "MIT",
    "authors": [
        {
            "name": "Danila Mikhalev",
            "email": "danila@dan-mi.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/auth": "^12.10",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "illuminate/support": "^12.10",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14"
    },
    "autoload": {
        "psr-4": {
            "Aesis\\PermissionObserver\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Aesis\\PermissionObserver\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aesis\\PermissionObserver\\PermissionObserverServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
